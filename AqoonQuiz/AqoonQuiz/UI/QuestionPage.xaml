<Page x:Class="AqoonQuiz.UI.QuestionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AqoonQuiz.UI"
      mc:Ignorable="d" 
     MinWidth="800" MinHeight="450"
      Title="QuestionPage"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/UI/DesignImages/Question.png" />
        </Grid.Background>
        <Border x:Name="FrameBorder" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1"  Background="#f2bbb0" CornerRadius="10">
            <Viewbox Stretch="Uniform">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" Style="{DynamicResource MainText}"  FontWeight="Bold" HorizontalAlignment="Center" FontSize="20">
                       What was the name of the <LineBreak></LineBreak> main actor in popular TV show 'Friends'?
                    </TextBlock>
                    <Grid x:Name="ReponsesGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" FontFamily="Baskerville Old Face" Style="{DynamicResource RoundCorner}" x:Name="ResponseA" Content="Jim Argast" FontSize="16" Foreground="#fff" Margin="0 20" Width="180" Height="33"/>
                        <Button Grid.Column="1" Grid.Row="0" FontFamily="Baskerville Old Face" Style="{DynamicResource RoundCorner}" x:Name="ResponseB" Content="Tony Malino" FontSize="16" Foreground="#fff" Margin="0 20" Width="180" Height="33"/>
                        <Button Grid.Column="0" Grid.Row="1" FontFamily="Baskerville Old Face" Style="{DynamicResource RoundCorner}" x:Name="ResponseC" Content="Frederic Roger-Johnson" FontSize="16" Foreground="#fff" Margin="0 20" Width="180" Height="33"/>
                        <Button Grid.Column="1" Grid.Row="1" FontFamily="Baskerville Old Face" Style="{DynamicResource RoundCorner}" x:Name="ResponseD" Content="Ivan Miskov" FontSize="16" Foreground="#fff" Margin="0 20" Width="180" Height="33"/>
                    </Grid>
                </StackPanel>
            </Viewbox>
        </Border>
    </Grid>
</Page>
